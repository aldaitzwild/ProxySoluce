<h2>Test Drag'n Drop</h2>

<div class="container">
	<input type="text" value="" class="skills-filter btn btn-light my-3 text-left" placeholder="Seach skills">
	<ul class="skills container list-group list-group-horizontal-sm flex-wrap">

		{% for skillValue, skill in skills %}

			{% include "DragnDrop/_poc--drag--drop--skill--item.html.twig" %}

		{% endfor %}

	</ul>
	<form action="" method="POST">
		<ul class="drop-zone container list-group list-group-horizontal-sm flex-wrap align-items-start align-content-start border border-secondary mt-5 vh-50">
			{% if selected is defined %}

				{% for skillValue, skill in selected %}

					{% include "DragnDrop/_poc--drag--drop--skill--item.html.twig" %}

				{% endfor %}

			{% endif %}

		</ul>
		<input type="submit" value="Submit" class="btn btn-primary mt-3">
	</form>


</div>
