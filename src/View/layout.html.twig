<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}ProxySoluce{% endblock %}</title>
    {% block stylesheet %}
    {% endblock %}
    <link rel="stylesheet" href="/assets/css/_style.css">
    <link rel="icon" href="/assets/images/favicon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body class="bg-secondary">
        <div class="menubody">
            <div class="smallmenu">
                <span id="butmenu" style="font-size:30px;cursor:pointer" onclick="openNav()">➡</span>
                <div id="mySidenav" class="sidenav">
                    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">⬅</a>
                    <a href="#"><img src="/assets/images/modif.jpg" alt="logo modif" width="80" height="auto"></a>
                    <a href="#"><img src="/assets/images/search.png" alt="logo search" width="80" height="auto"></a>
                    <a href="#"><img src="/assets/images/parametre.jpeg" alt="logo parametre" width="80" height="auto"></a>
                </div>
            </div>

             
            <div class="bigmenu">
                 <ul class="menu">
                    <h4>Menu</h4>    
                    <li><a href="#">Home</a></li>    
                    <li><a href="#">Recherche</a></li>    
                    <li><a href="#">Paramètres</a></li>    
                </ul>          
            </div>        
        </div>

        <div class="content">
            {% block content %}
            {% endblock %}
        </div>
            {% block javascript %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            <script>
            function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
            }

            function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            }
            </script>      
        
    {% endblock %}
</body>
</html>


