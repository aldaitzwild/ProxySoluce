{% extends 'layout.html.twig' %}

{% block title %}accueil
{% endblock %}


{% block content %}
	<div id="carouselExampleCaptions" class="carousel slide vh-25 vw-100 " data-bs-ride="carousel">

		<div class="carousel-indicators">
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>


		</div>

		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="/assets/images/carousel1.png " class="d-block  hello" alt="...">
				<div class="carousel-caption d-none d-md-block">
					<h1>De vrais bricoleurs
						<br>
						pour vous aider</h1>

				</div>
			</div>
			<div class="carousel-item ">
				<img src="/assets/images/carousel2.png " class="d-block hello" alt="...">
				<div class="carousel-caption d-none d-md-block">
					<h1>100% confiance</h1>

				</div>
			</div>
			<div class="carousel-item ">
				<img src="/assets/images/carousel3.png " class="d-block hello" alt="...">
				<div class="carousel-caption d-none d-md-block">
					<h1>Satisfait ou refait</h1>

				</div>
			</div>
		</div>
		<div class="carousel-item">
			<img src="/assets/images/carousel4.png " class="d-block hello" alt="...">
			<div class="carousel-caption d-none d-md-block">
				<h1>Assurance comprise</h1>

			</div>
		</div>
		<button class="carousel-control-prev arrow" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
			<span class="carousel-control-prev-icon arrow" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>


	<div class="annonces bodyBackground">

		<a href="/offering/showoffer">
			<button class="btn-lg annonce body Background">Que recherchez-vous?
				<br>
				Voir les annonces
			</button>
		</a>
	</div>


	<div class="container3 bodyBackground">
		<div class="row">

			{% for categorie in categories %}
				<div class=" col-lg-4 col-md-6 mb-9 mb-lg-0 container4 bodyBackground">
					<a href="/offerings/list/?category={{categorie.name}}" class="thumbnail">
						<img src="/assets/images/images1/{{categorie.name}}.png" alt="{{categorie.name}}" class="fluid img-thumbnail w-100 shadow-1-strong rounded mb-4">
						<div class="texte_centrer">{{categorie.name}}</div>
					</a>

				</div>
			{% endfor %}

		</div>
	</div>
</div>{% endblock %}
