{% extends 'layout.html.twig' %}
{% block stylesheet %}
	{# include css files for boostrap from CDN#}
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" href="/assets/css/offering_show.css">
{% endblock %}

{% block content %}


	<div class="d-flex flex-wrap">
		{% for n, offer in offers %}
			<div class="container bg-white g-2 p-1 mt-4 col-5">
				<div class="row">
					<div class='col-12 d-flex align-items-start mt-2 d-flex align-items-center'>
						<div class='person__img flex-shrink-0'>
							{% if userLoggedInfo.id is defined and userLoggedInfo.id == offer['person_id'] and userLoggedInfo.picture !='' %}
								<img src="/uploads/{{userLoggedInfo.picture}}" alt="Profile pic">
							{% else %}
								<img src="/assets/images/placeholder-pic.png" alt="Profile pic">
							{% endif %}
						</div>
						<div class='d-flex flex-column ml-3'>
							<p class='mb-0 h5'>
								{{offer.firstname ~ ' '~ offer.lastname}}
							</p>
							<div class='d-flex flex-wrap mt-2'></div>
						</div>
					</div>
				</div>

				<div class="col-12 text-center">
					<div class="row mt-3 d-flex justify-content-around mx-auto">
						<p class="offer_item col-5 text-center font-weight-bold d-flex align-items-center">
							{{offer.category}}
						</p>
						<p class="offer_item col-5 font-weight-bold text-center d-flex align-items-center">
							<svg class="svg-icon" viewbox="0 0 20 20">
								<path fill="purple" d="M10.292,4.229c-1.487,0-2.691,1.205-2.691,2.691s1.205,2.691,2.691,2.691s2.69-1.205,2.69-2.691
																																																							S11.779,4.229,10.292,4.229z M10.292,8.535c-0.892,0-1.615-0.723-1.615-1.615S9.4,5.306,10.292,5.306
																																																							c0.891,0,1.614,0.722,1.614,1.614S11.184,8.535,10.292,8.535z M10.292,1C6.725,1,3.834,3.892,3.834,7.458
																																																							c0,3.567,6.458,10.764,6.458,10.764s6.458-7.196,6.458-10.764C16.75,3.892,13.859,1,10.292,1z M4.91,7.525
																																																							c0-3.009,2.41-5.449,5.382-5.449c2.971,0,5.381,2.44,5.381,5.449s-5.381,9.082-5.381,9.082S4.91,10.535,4.91,7.525z"></path>
							</svg>
							{{offer.city}}
						</p>
					</div>
				</div>

				<a href="/offerings/show?id={{offer.id}}" class="offer-title-link text-decoration-none">
					<div class="row mb-3">
						<div class="offer_item col-8 col-md-6 text-center p-2 mx-auto mt-4">
							<p class='h4'>{{offer.title}}</p>
						</div>
					</div>
				</div>
			</a>
		{% endfor %}
	</div>
{% endblock %}
