{% extends 'layout.html.twig' %}
{% block stylesheet %}
	{# include css files for boostrap from CDN#}
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" href="/assets/css/offering_show.css">
{% endblock %}
{% block content %}
	<article>
		<div class='container bg-white p-4 mt-4'>
			<div class="row">
				<div class='col-11 mx-auto d-flex align-items-center'>
					<div class='person__img bg-primary'></div>
					<div class='d-flex flex-column align-items-center ml-3'>
						<p class='mb-0 h4'>{{offer.firstname ~ ' '~ offer.lastname}}</p>
						<p class='offer_category mb-0 bg-light px-3 py-1 mt-2'>{{offer.category}}</p>
					</div>

				</div>
			</div>

			<div class="row mt-4">
				<p class="offer_item col-10 col-md-5 p-4 mx-auto font-weight-bold">Comp√©tence</p>
				<p class="offer_item col-10 col-md-5 p-4 mx-auto font-weight-bold">
					{{offer.city}}</p>
			</div>

			<div class="row mb-4">
				<div class="offer_item col-10 col-md-5 p-4 mx-auto mt-4">
					<p class='h3'>{{offer.title}}</p>
					<p>{{offer.description}}</p>

				</div>
				<div class="offer_item col-10 col-md-5 p-4 mx-auto mt-4">
					{% if errors is defined %}
						<div>
							{% for error in errors %}
								<p class='alert alert-danger mt-4'>{{error}}</p>

							{% endfor %}

						</div>
					{% endif %}
					<form method="POST">
						<input type="hidden" name="title" value="{{offer.title}}">
						<div>
							<label for="email" class="form_label">Votre email:</label>
							<input type="email" id="email" name="email" class="form_input">
						</div>
						<div class="mt-4">
							<label for="message" class="form_label">Votre message:</label>
							<textarea name="message" id="message" rows="10" class="form_input"></textarea>
						</div>
						<input type="submit" value="Envoyer le message" class='form_input mt-4'>


					</form>
					{% if success is defined %}

						<p class='alert alert-success mt-4'>{{success}}</p>

					{% endif %}
				</div>
			</div>

		</div>


	</article>
{% endblock %}
