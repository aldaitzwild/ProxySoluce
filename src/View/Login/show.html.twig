{% extends "layout.html.twig" %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/profile_show.css">
{% endblock %}
{% block content %}

	<div class="container bg-white py-3 px-4">

		<div>
			<img src="/uploads/{{user.picture}}" alt="Profile picture">
		</div>

		<div class="d-flex">
			<p class="fw-bold me-2">Firstname:</p>
			<p>{{user.firstname}}</p>
		</div>

		<div class="d-flex">
			<p class="fw-bold me-2">Lastname:</p>
			<p>{{user.lastname}}</p>
		</div>


	</div>

{% endblock %}
